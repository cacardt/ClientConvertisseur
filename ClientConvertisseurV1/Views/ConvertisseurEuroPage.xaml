<Page
    x:Class="ClientConvertisseurV1.Views.ConvertisseurEuroPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:ClientConvertisseurV1.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid>
        <TextBlock HorizontalAlignment="Center" Text="Montant" />
        <TextBlock Margin="700,200,650,500" Text="Devise" />
        <TextBlock Margin="700,300,600,400" Text="Montant en devise" />




        <TextBox
            x:Name="MontantEuro"
            Width="120"
            Margin="650,150"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Text="{Binding Euro}"
            TextWrapping="Wrap" />



        <ComboBox
            x:Name="devise"
            Width="120"
            Margin="650,250" />

        <Button Margin="100,100,600,350" Content="Valider" />



        <TextBox Width="120" Margin="650,350,650,325" />

    </Grid>
</Page>
